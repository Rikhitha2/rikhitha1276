#include<stdio.h>
int main( )
{
	int rows = 7;
	int space = 6;
	int i,j,k;
	for (i=1; i<= rows; i++)
	{
		for (j=1; j <= space; j++)
		printf(" ");
		
		space--;
		for (k=1; k <=2*i-1; k++)
		printf("*");
		
		printf("\n");
	}
space = 1;
for(i=1; i<= rows-1; i++)
{
	for (j=1; j<= space; j++)
	printf(" ");
	
	space++;
	
for (k=1; k <= 2*(rows-i)-1; k++)
printf("*");

printf("\n");
}
}
